<div class="min-h-screen bg-gray-900 text-gray-100" data-controller="schedule">
    <div class="relative bg-cover bg-center h-[400px]">
        <div class="absolute inset-0 bg-black bg-opacity-60">
            <div class="container mx-auto h-full flex items-center px-4">
            <div class="max-w-xl">
                <h1 class="text-4xl md:text-5xl font-bold mb-4">Estilo e Profissionalismo</h1>
                <p class="text-xl mb-8">Agende seu horário em nossa barbearia e experimente um atendimento premium.</p>
                <%= link_to "Agendar Agora", appointments_path, class: "bg-amber-500 text-gray-900 px-6 py-3 rounded-lg font-semibold hover:bg-amber-400 transition" %>
            </div>
            </div>
        </div>
    </div>

    <section class="py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold mb-12 text-center">Agende seu Horário</h2>
            
            <%= turbo_frame_tag "new_appointment" do %>
                <%= render 'form', appointment: @appointment %>
            <% end %>

            <div id="appointments">
            <%= render partial: 'appointment', collection: @appointments %>
            </div>
        </div>
    </section>
</div>
