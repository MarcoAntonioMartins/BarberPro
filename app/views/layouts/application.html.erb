<!DOCTYPE html>
<html>
  <head>
    <title>BarberPro</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
  <style type="text/tailwindcss">
      @theme {
        --color-clifford: #da373d;
      }
    </style>
  </head>

  <body class="min-h-screen bg-gray-900 text-gray-100">
    <nav class="bg-gray-800 p-4">
      <div class="container mx-auto flex justify-between items-center">
        <div class="flex items-center space-x-2">
          <span class="text-xl font-bold">BarberPro</span>
        </div>
        
        <div class="hidden md:flex space-x-6">
          <%= link_to "Serviços", services_path, class: "hover:text-amber-500 transition" %>
          <%= link_to "Agendar", appointments_path, class: "hover:text-amber-500 transition" %>
          <%= link_to "Sobre", about_path, class: "hover:text-amber-500 transition" %>
        </div>

        <button data-controller="mobile-menu" data-action="click->mobile-menu#toggle" class="md:hidden">
        </button>
      </div>
    </nav>

    <!-- Mobile Menu -->
    <div 
      data-controller="mobile-menu" 
      data-mobile-menu-hidden-class="hidden" 
      class="md:hidden hidden bg-gray-800 p-4"
      data-mobile-menu-target="menu"
    >
      <div class="flex flex-col space-y-4">
        <%= link_to "Serviços", services_path, class: "hover:text-amber-500 transition" %>
        <%= link_to "Agendar", appointments_path, class: "hover:text-amber-500 transition" %>
        <%= link_to "Sobre", about_path, class: "hover:text-amber-500 transition" %>
      </div>
    </div>

    <%= yield %>

    <footer class="bg-gray-800 py-8">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="flex items-center space-x-2 mb-4 md:mb-0">
            <span class="text-xl font-bold">BarberPro</span>
          </div>
          <div class="text-center md:text-right">
            <p class="text-gray-400">© <%= Time.current.year %> BarberPro. Todos os direitos reservados.</p>
            <p class="text-gray-400">Rua Example, 123 - Centro</p>
            <p class="text-gray-400">contato@barberpro.com</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>